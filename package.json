{
  "name": "vott",
  "version": "1.8.2",
  "description": "A platform-agnostic framework for building conversational applications",
  "main": "./lib/vott.js",
  "scripts": {
    "dev": "npm install && npm run test",
    "build": "cross-env BABEL_ENV=production babel src -d lib",
    "lint": "eslint ./src/",
    "test": "npm run lint && cross-env NODE_ENV=test nyc ava --verbose",
    "report": "nyc report --reporter=html",
    "prepublish": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/krismuniz/vott.git"
  },
  "author": "Kristian Mu√±iz <contact@krismuniz.com> (http://www.krismuniz.com)",
  "license": "MIT",
  "devDependencies": {
    "ava": "0.19.1",
    "babel-cli": "6.24.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-register": "6.24.1",
    "coveralls": "2.13.1",
    "cross-env": "5.0.1",
    "eslint": "3.19.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-standard": "3.0.1",
    "eslint-plugin-import": "2.3.0",
    "eslint-plugin-node": "5.1.0",
    "nyc": "11.0.2"
  },
  "ava": {
    "require": [
      "babel-core/register"
    ],
    "files": [
      "test/*.js"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "standard": {
    "ignore": [
      "/lib/"
    ]
  },
  "dependencies": {}
}
